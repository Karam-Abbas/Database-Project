@model IEnumerable<final.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Product</h2>
@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info">
        <strong> Information: </strong>  @TempData=["InfoMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span>&times;</span>
        </button>

    </div>
}
else if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <strong> Success!  </strong>  @TempData=["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span>&times;</span>
        </button>

    </div>
}
else if (TempData["ErrorMessage"] != null)
{
<div class="alert alert-danger">
    <strong> Error!  </strong>  @TempData=["ErrorMessage"]
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span>&times;</span>
    </button>

</div>
}

<p>
    @Html.ActionLink("Add New Product", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.product_code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_expiry)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_final_price)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.product_code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_expiry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_final_price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.product_code }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.product_code }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.product_code }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
